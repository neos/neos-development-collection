# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Composer uses 4 spaces itself
[composer.json]
indent_size = 4

# PHP should follow the PSR-2 standard
[*.php]
indent_size = 4

# JS should use tabs, to reduce conflicts
[*.js]
indent_style = tab

# SASS should use tabs, to reduce conflicts
[*.scss]
indent_style = tab

# HTML should use tabs, to reduce conflicts
[*.html]
indent_style = tab
