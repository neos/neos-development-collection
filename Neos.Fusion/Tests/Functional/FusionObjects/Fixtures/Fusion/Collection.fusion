collection.basicLoop = Neos.Fusion:Collection {
	collection = ${collection}
	itemName = 'element'
	itemRenderer = Neos.Fusion:TestRenderer {
		test = ${element}
	}
}

collection.basicLoopOtherContextVariables = Neos.Fusion:Collection {
	collection = ${collection}
	itemName = 'element'
	itemRenderer = Neos.Fusion:TestRenderer {
		test = ${element + other}
